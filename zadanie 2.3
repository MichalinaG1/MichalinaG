
using System;

namespace zadanie2
{
    class Program
    {
        static void Main( string[] args)
        {
            // Napisać program wczytujący trzy liczby i wypisujący na ekranie wartość najmniejszej i
            // największej z tych liczb.
            double x, y, z;
            Console.Write("podaj x: ");
            x = Convert.ToDouble(Console.ReadLine());
            Console.Write("podaj y: ");
            y = Convert.ToDouble(Console.ReadLine());
            Console.Write("podaj z: ");
            z = Convert.ToDouble(Console.ReadLine());
            if ((x > y) && (x > z))
                Console.WriteLine("najwieksza liczba: {0}", x);
            if ((y > x) && (y > z))
                Console.WriteLine("najwieksza liczba: {0}", y);
            else if ((z > x) && (z > y))
                Console.WriteLine("najwieksza liczba: {0}", z);
            if ((x < y) && (x < z))
                Console.WriteLine("najmniejsza liczba: {0}", x);
            if ((y < x) && (y < z))
                Console.WriteLine("najmniejsza liczba: {0}", y);
            else if ((z < x) && (z < y))
                Console.WriteLine("najmniejsza liczba: {0}", z);
            Console.ReadKey(true);
        }
    }
}
