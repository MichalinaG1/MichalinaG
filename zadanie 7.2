// zadanych jako argumenty tej funkcji. Napisz program wykorzystujący funkcję max.

using System;

namespace zadanie2
{
    class Program
    {
        static double max(double a, double b)
        {
            if (a > b) return a;
            else return b;
        }

        static void Main(string[] args)
        {
            Console.WriteLine("maksimum z 3 i 5 to {0}", max(3, 5));
            Console.WriteLine("maksimum z 5 i 3 to {0}", max(5, 3));
            Console.WriteLine("maksimum z 5 i 5 to {0}", max(5, 5));
            Console.ReadKey(true);
        }
    }
}
