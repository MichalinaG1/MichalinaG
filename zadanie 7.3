using System;

namespace zadanie3
{
    class Program
    {
        static double pole_kola(double r)
        {
            return Math.PI * r * r;
        }

        static void Main(string[] args)
        {
            Console.WriteLine("pole kola o promieniu 2 jest rowne {0}", pole_kola(2));
            Console.ReadKey(true);
        }
    }
}
