//Napisz funkcję, która posiada jeden parametr będący rokiem. Ma ona zwracać wartość 1, jeśli
// rok jest przestępny i 0 w pozostałych przypadkach. Napisz program testujący utworzoną
// funkcję.
using System;
namespace zadanie_8
{
    class Program
    {
        static int czy_rok_przestepny(int rok)
        {
            if ((rok % 4 == 0) && (rok % 100 != 0) || (rok % 400 == 0))
                return 1;
            return 0;
        }

        static void Main(string[] args)
        {
            Console.WriteLine("czy rok 2020 jest przestepny? {0}", czy_rok_przestepny(2020));
            Console.WriteLine("czy rok 2025 jest przestepny? {0}", czy_rok_przestepny(2025));
            Console.ReadKey(true);
        }
    }
}
