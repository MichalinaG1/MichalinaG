//Napisz funkcję, która sprawdza czy jej argument jest liczbą pierwszą. Jako wartość funkcja
// powinna zwracać 1 dla liczb pierwszych i 0 dla pozostałych liczb. Przetestuj działanie
// utworzonej funkcji.

using System;

namespace zadanie_5
{
    class Program
    {
        static int czy_pierwsza(int liczba)
        {
            int i;
            for (i = 2; i < liczba; i++)
            {
                if (liczba % i == 0) return 0; //nie jest pierwsza
            }
            return 1;
        }

        static void Main(string[] args)
        {
            Console.WriteLine("czy liczba 6 jest pierwsza? {0} ", czy_pierwsza(6));
            Console.WriteLine("czy liczba 7 jest pierwsza? {0}", czy_pierwsza(7));
            Console.ReadKey(true);
        }

    }
}
