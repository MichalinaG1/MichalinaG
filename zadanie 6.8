//Napisać program wczytujący ciąg n (1<=n<=1000) liczb naturalnych i wypisujący na ekranie
// wszystkie parzyste liczby w kolejności niemalejącej. Do wypisywania elementów tablicy użyj
// pętli foreach.
// Wskazówka: Posortuj wczytane liczby, a następnie z tablicy wypisz tylko liczby parzyste.
int[] tab = new int[1000];
int n, parzysta = 0;

Console.Write("Podaj liczbę elementów ciągu: ");
n = Convert.ToInt32(Console.ReadLine());

for (int i = 0; i < n; i++)
{
    Console.Write($"Podaj tab[{i}]: ");
    tab[i] = Convert.ToInt32(Console.ReadLine());
}

for (int i = 0; i < n - 1; i++)
{
    int minIndex = i;
    for (int j = i + 1; j < n; j++)
    { 
        if (tab[j] < tab[minIndex]) 
        minIndex = j;
    }
    int temp = tab[i];
    tab[i] = tab[minIndex];
    tab[minIndex] = temp;
}

int[] parzyste = new int[n];  // max rozmiar taki sam jak n
parzysta = 0;

// Dodawanie tylko parzystych liczb do tablicy parzyste
for (int i = 0; i < n; i++)
{
    if (tab[i] % 2 == 0)
    {
        parzyste[parzysta] = tab[i];
        parzysta++; 
    }
}

Console.WriteLine("Liczby parzyste w kolejności niemalejącej:");

foreach (int liczba in parzyste)
{
    if (liczba == 0) break; 
    Console.Write(liczba + " ");
}

Console.WriteLine();
Console.ReadKey(true);
