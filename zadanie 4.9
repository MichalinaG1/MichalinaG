using System;

namespace zadanie4
{
    class Program
    {
        static void Main( string[] args)
        {
            //Napisz program obliczający sumę cyfr dla wczytanej z klawiatury liczby naturalnej.
            // Użyj pętli while. Np.: Dla liczby=1342 trzeba obliczyć sumę 1+3+4+2.

            int x, suma = 0, cyfra;
            Console.Write("podaj liczbe: ");
            x = Convert.ToInt32(Console.ReadLine());
            while (x > 0)
            {
                cyfra = x % 10; // ostatnia cyfra liczby
                suma += cyfra;
                x /= 10; //liczba bez ostatniej cyfry
            }
            Console.WriteLine("suma cyfr = {0}", suma);
            Console.ReadKey(true);

        }
    }
}
