using System;

namespace zadanie1
{
    class Program
    {
        static void Main( string[] args)
        {
            // Napisać program wczytujący promień podstawy (r) i wysokość (h) stożka i wypisujący na
            // ekranie objętość i pole całkowite tego stożka.
            double r, h, V, P, l;
            Console.Write("Podaj r:");
            r = Convert.ToDouble(Console.ReadLine());
            Console.Write("Podaj h:");
            h = Convert.ToDouble(Console.ReadLine());
            // l = pi*r*sqrt(r^2 + h^2) <- wzor na tworzaca stozka
            l = Math.Sqrt(r * r + h * h);
            // V = 1/3 *pi*r^2*h <- wzor na objetosc stozka
            V = 1.0/3 * Math.PI * r * r * h;
            Console.WriteLine("V={0}", V);
            // P = pi*r^2 + pi*r*l  <- wzor na pole calowite stozka
            P = Math.PI*r*r + Math.PI*r*l;
            Console.WriteLine("P={0}", P);
            Console.ReadKey(true);
        }
    }
}
