using System;

namespace zadanie1
{
    class Program
    {
        static void Main( string[] args)
        {
            // Napisać program wczytujący dwie liczby i wypisujący na ekranie ich sumę, różnicę, iloczyn i
            // iloraz.
            double x, y, suma, roznica, iloczyn, iloraz;
            Console.WriteLine("Podaj x:");
            x = Convert.ToDouble(Console.ReadLine());
            Console.WriteLine("Podaj y:");
            y = Convert.ToDouble(Console.ReadLine());
            suma = x + y;
            roznica = x - y;
            iloczyn = x * y;
            iloraz = x / y;
            Console.WriteLine("suma = {0}+{1}={2}",x,y,suma);
            Console.WriteLine("roznica = {0}-{1}={2} ",x,y,roznica);
            Console.WriteLine("iloczyn = {0}*{1}={2} ",x,y,iloczyn);
            Console.WriteLine("iloraz = {0}/{1}={2} ",x,y,iloraz);
            Console.ReadKey(true);
        }
    }
}
