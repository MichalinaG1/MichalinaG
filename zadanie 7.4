// _cyfr, która wyznacza liczbę cyfr dla zadanej liczby naturalnej jako
// argument tej funkcji. Napisz program wykorzystujący funkcję ile_cyfr.

using System;

namespace zadanie_4
{
    class Program
    {
        static int ile_cyfr(int liczba)
        {
            int i = 0;
            while (liczba / 10 > 0)
            {
                liczba /= 10;
                i++;
            }
            return i+1;
        }

        static void Main(string[] args)
        {
            Console.WriteLine("liczba 890 ma {0} cyfry", ile_cyfr(890));
            Console.WriteLine("liczba 67367345 ma {0} cyfr", ile_cyfr(67367345));
            Console.ReadKey(true);
        }

    }
}
