        {
            // Dana jest funkcja kwadratowa f(x)=ax^2+bx+c. Napisać program wczytujący współczynniki
            // funkcji kwadratowej (a, b, c) i wypisujący na ekranie jej miejsca zerowe lub informację o ich
            // braku.
            // Wskazówka: Zbadaj deltę, wyznacz miejsca zerowe.
            double a, b, c, delta, x1, x2, x0;
            Console.Write("podaj a: ");
            a = Convert.ToDouble(Console.ReadLine());
            Console.Write("podaj b: ");
            b = Convert.ToDouble(Console.ReadLine());
            Console.Write("podaj c: ");
            c = Convert.ToDouble(Console.ReadLine());
            
            // delta = b^2 - 4ac 
            // delta > 0 => 2 miejsca zerowe
            // delta = 0 => 1 miejsce zerowe
            // delta < 0 => brak miejsc zerowych

            delta = b * b - (4 * a * c);
            x0 = -b / (2 * a);
            x1 = (-b + Math.Sqrt(delta)) / (2 * a);
            x2= (-b - Math.Sqrt(delta)) / (2 * a);
            
            if (delta>0)
                Console.WriteLine("2 miejsca zerowe: {0} i {1}", x1, x2);
            if (delta==0)
                Console.WriteLine("1 miejsce zerowe: {0}", x0);
            if (delta < 0)
                Console.WriteLine("brak miejsc zerowych");
            Console.ReadKey(true);
        }
    }
